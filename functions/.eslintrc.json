{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript",
        "prettier"
    ],
    "ignorePatterns": ["**/*.js"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "consistent-return": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/lines-between-class-members": "off",
        "class-methods-use-this": "off",
        "no-underscore-dangle":  ["error", { "allow": ["_tag"] }],
        "react/jsx-filename-extension": [
            0
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ]
    }
}